<?xml version="1.0" encoding="UTF-8"?>

<openerp>
	<data>	
        
        <template id="user">
			<div class="container"> 
				<t t-esc="user.name"/> 
			</div>
        </template>
        
        <template id="invoices">
        	<div class="container">
				<t t-foreach="invoices" t-as="invoice">
              		<p><t t-esc="invoice.name"/></p>
            	</t>
            </div>
        </template>
        
		<template id="index">
			<t t-call="website.layout">
				
				<div class="container">
					<h4> User:</h4>
				</div>
				<t t-call="bloopark_demo.user"/>
				<div class="container">
					<h4>Invoices:</h4>
				</div>
				<t t-call="bloopark_demo.invoices"/>
			</t>
		</template>
 	</data>
</openerp>